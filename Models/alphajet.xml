  </model>

  <!-- Rentré des roues Temporairement disparition/apparition des roues -->
  <animation>
    <type>select</type>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>axeAH</object-name>
    <object-name>axeAB</object-name>
    <object-name>verinA</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <condition>
      <not>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value> 0 </value>
        </equals>
      </not>
    </condition>
  </animation>

  <!-- Rentré des roues -->
  <animation>
    <name>TrainAvant</name>
    <object-name>roueA</object-name>
    <object-name>axeAH</object-name>
    <object-name>axeAB</object-name>
    <object-name>verinA</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainAvant</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 94 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -4.473 </x-m>
      <y-m>  0.100 </y-m>
      <z-m> -0.936 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m>  4.742 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.275 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/surface-positions/rudder-pos-norm</property>
    <factor> 30 </factor>
    <axis>
      <x1-m>  4.772 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.008 </z1-m>
      <x2-m>  5.632 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.516 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor> -15 </factor>
    <axis>
     <x1-m>  1.728 </x1-m>
     <y1-m> -3.058 </y1-m>
     <z1-m> -0.334 </z1-m>
     <x2-m>  2.213 </x2-m>
     <y2-m> -4.525 </y2-m>
     <z2-m> -0.483 </z2-m>
    </axis>
  </animation>

  <animation>
   <type>rotate</type>
   <object-name>aileronD</object-name>
   <property>/surface-positions/right-aileron-pos-norm</property>
   <factor> -15 </factor>
   <axis>
    <x1-m>  2.213 </x1-m>
    <y1-m>  4.525 </y1-m>
    <z1-m> -0.483 </z1-m>
    <x2-m>  1.728 </x2-m>
    <y2-m>  3.058 </y2-m>
    <z2-m> -0.334 </z2-m>
   </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>/surface-positions/flap-pos-norm</property>
    <factor> 40 </factor>
    <axis>
      <x1-m>  1.701 </x1-m>
      <y1-m> -2.679 </y1-m>
      <z1-m> -0.512 </z1-m>
